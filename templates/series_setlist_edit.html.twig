{% extends 'index.html.twig' %}

{% block body %}
<div class="container">
    <h1><a href="https://www.trueachievements.com/" target="_blank" class="link-secondary link-underline-opacity-0 link-underline-opacity-100-hover">My Game Collection</a> - Series Setlist</h1>
    <form method="post" class="form-horizontal" role="form">
        {% if mode == 'edit' %}
        <input type="hidden" name="id" value="{{ serie.id }}" />
        {% endif %}

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">{{ message }}</div>
            {% endfor %}
        {% endfor %}

        <div class="form-group row">
            <div class="col col-sm-2">
                <label for="name" class="col-form-label d-flex justify-content-end">Serie name</label>
            </div>
            <div class="col col-sm-8">
                <input type="text" id="name" name="name" class="form-control" value="{{ serie.name|default('') }}" required />
            </div>
        </div>

        <div class="form-group row">
            <div class="col col-sm-2">
                <label for="userTitle" class="col-form-label d-flex justify-content-end">User Title</label>
            </div>
            <div class="col col-sm-8">
                <input type="text" id="userTitle" name="userTitle" class="form-control" value="{{ serie.userTitle}}" required />
            </div>
        </div>

        <div class="form-group row">
            <div class="col col-sm-2">
                <label for="status" class="col-form-label d-flex justify-content-end">Status</label>
            </div>
            <div class="col col-sm-8">
                <select name="status" id="status" class="form-control">
                    <option value="listed" {% if serie.status == 'listed' %}selected{% endif %} style="background-color: green;">Listed</option>
                    <option value="unlisted" {% if serie.status == 'unlisted' %}selected{% endif %} style="background-color: red;">Unlisted</option>
                    <option value="franchise" {% if serie.status == 'franchise' %}selected{% endif %} style="background-color: cyan;">Franchise</option>
                    <option value="subfranchise" {% if serie.status == 'subfranchise' %}selected{% endif %} style="background-color: yellow;">Sub-franchise</option>
                    <option value="crossover" {% if serie.status == 'crossover' %}selected{% endif %} style="background-color: orange;">Crossover</option>
                    <option value="community" {% if serie.status == 'community' %}selected{% endif %} style="background-color: pink;">Community</option>
                    <option value="legacy" {% if serie.status == 'legacy' %}selected{% endif %} style="background-color: black; color: white;">Legacy</option>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2">
                <label class="col-form-label d-flex justify-content-end">&nbsp;</label>
            </div>
            <div class="col-sm-8">
                <input type="submit" name="action" value="Save" class="btn btn-primary" />
                <a href="/series-setlist" class="btn btn-light">Cancel</a>
                <input type="submit" name="action" value="Delete" class="btn btn-danger confirm" />
            </div>
        </div>
    </form>
</div>
{% endblock %}